<div class="row">
  <div class="container form_panel">

    <div class="row">
      <nav>
        <ul class="pager">
          <li class="previous"> <%= link_to 'Back', tasks_path %></li>
          <li class="next"><%= link_to 'Edit', edit_task_path(@task)%></li>
        </ul>
      </nav>
    </div>

    <div class="col-xs-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4>Task detail</h4>
        </div>
        <div class="panel-body">
          <div class="caption">
            <h3><%= @task.title %></h3>
            <input class="btn btn-info pull-right" id="task_run_button" type="button" value="Run">
          </div>
        </div>
        <div class="panel-body">
          <table class="table" style="padding: 0; margin: 0;">
            <tr>
              <td>Crawler name:</td>
              <td><%= Crawler.find(@task.crawler_id).title %></td>
            </tr>
            <tr>
              <td>Commander:</td>
              <td>
                <p id="task_commander"><%=raw @task.commander %></p>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>




