<%= form_for(@task) do |f| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :crawler %><br/>
      <%= f.select(:crawler_id, Crawler.all.map { |lc| [lc.title, lc._id] }, :include_blank => false) %>
    </div>
    <div class="field" style="width: 800px;">
      <%= f.label :commander %><br/>
      <%= f.text_field :commander %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
