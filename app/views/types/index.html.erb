<div class='container' id="showcases" data-ctrl="jobs">

  <div class="row">
    <nav>
      <ul class="pager">
        <li class="previous"> <%= link_to 'New Type', new_type_path %></li>
        <li class="next"><h3 style="float: right;">Count: <span><%= @count %></span></h3></li>
      </ul>
    </nav>
  </div>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Listing types</div>
    <div class="panel-body">

      <!-- Table -->
      <table class="table table-striped table-bordered" cellspacing="0">
        <tr>
          <th>Title</th>
          <th>Key</th>
          <th>Value</th>
          <th>Description</th>
          <th>Category</th>
          <th>Show</th>
        </tr>

        <% @types.each do |type| %>
            <tr>
              <td><%= type.title %></td>
              <td><%= type.key %></td>
              <td><%= type.value %></td>
              <td><%= type.description %></td>
              <td><%= Cat.find(type.cat_id).title %></td>
              <td><%= link_to 'Show', type %></td>
            </tr>
        <% end %>
      </table>

    </div>
  </div>

  <div class="pagination">
    <%= will_paginate @types, :renderer => BootstrapPagination::Rails %>
  </div>


</div>

