<h1>Listing types</h1>

<table>
  <tr>
    <th>Cat</th>
    <th>Title</th>
    <th>Key</th>
    <th>Value</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @types.each do |type| %>
  <tr>
    <td><%= type.cat_id %></td>
    <td><%= type.title %></td>
    <td><%= type.key %></td>
    <td><%= type.value %></td>
    <td><%= type.description %></td>
    <td><%= link_to 'Show', type %></td>
    <td><%= link_to 'Edit', edit_type_path(type) %></td>
    <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

