<div class='container' id="showcases" data-ctrl="jobs">


  <div class="panel panel-primary">
    <div class="panel-heading">Search jobs</div>
    <div class="panel-body">
      <%= form_tag(jobs_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Jobs" %>
          <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <nav>
      <ul class="pager">
        <li class="previous"> <%= link_to 'New Job', new_job_path %></li>
        <li class="next"><h3 style="float: right;">Count: <span><%= @count %></span></h3></li>
      </ul>
    </nav>
  </div>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Listing jobs</div>
    <div class="panel-body">

      <!-- Table -->
      <table class="table table-striped table-bordered" cellspacing="0">
        <thead>
        <tr>
          <th>Title</th>
          <th>Customer</th>
          <th>Duration</th>
          <th>Price</th>
          <th>From</th>
          <th>Status</th>
          <th>Type</th>
          <th>Show</th>
        </tr>
        </thead>

        <% @jobs.each do |job| %>
            <tr>
              <td>
                <%= link_to job.url do %>
                    <%= job.title %>
                <% end %>
                <div class="description" style="display: none">
                  <%= raw job.description %>
                </div>
              </td>
              <td><%= job.customer %></td>

              <td>
                <%= job.startdate %>
                -
                <%= job.enddate %>
              </td>
              <td><%= job.price %></td>
              <td><%= job.from %></td>
              <td><%= job.status %></td>
              <td><%= job.jobtype %></td>
              <td>
                <%= link_to 'Show', job %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="pagination">
    <%= will_paginate @jobs, :renderer => BootstrapPagination::Rails %>
  </div>

</div>



