<div class='container' id="showcases" data-ctrl="jobs">

  <br/>
  <div class="row">
    <%= link_to 'New Job', new_job_path %>
    <h3 style="float: right;">Count: <span><%= @count %></span></h3>
  </div>
  </br>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Listing jobs</div>
    <div class="panel-body">

      <!-- Table -->
      <table class="table table-striped table-bordered" cellspacing="0">
        <thead>
        <tr>
          <th>Title</th>
          <th>Customer</th>
          <th>Duration</th>
          <th>Price</th>
          <th>From</th>
          <th>Status</th>
          <th>Type</th>
          <th>Show</th>
        </tr>
        </thead>

        <% @jobs.each do |job| %>
            <tr>
              <td>
                <%= link_to job.url do %>
                    <%= job.title %>
                <% end %>
                <div class="description" style="display: none">
                  <%= raw job.description %>
                </div>
              </td>
              <td><%= job.customer %></td>

              <td>
                <%= job.startdate %>
                -
                <%= job.enddate %>
              </td>
              <td><%= job.price %></td>
              <td><%= job.from %></td>
              <td><%= job.status %></td>
              <td><%= job.jobtype %></td>
              <td>
                <%= link_to 'Show', job %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="pagination">
    <%= will_paginate @jobs, :renderer => BootstrapPagination::Rails %>
  </div>

</div>



