

<div class="row">
  <div class="container form_panel">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="caption">
          <h3><%= @job.title %></h3>

          <p>
            <b>Status: </b><%= @job.status %>
            <b>From: </b><%= @job.from %>
            <b>type: </b><%= @job.jobtype %>
            <span aria-hidden="true"></span>
            <a href="<%= @job.url %>"> View Job Posting </a>
          </p>
        </div>
      </div>
      <div class="panel-body">
        <a href="/<%= @job.app %>">
        <input class="btn btn-info pull-right" type="button" value="Project Info">
        </a>
      </div>
      <table class="table" style="padding: 0; margin: 0;">
        <tr>
          <td>Price</td>
          <td><%= @job.price %></td>
        </tr>
        <tr>
          <td>Customer</td>
          <td><%= @job.customer %></td>
        </tr>
        <tr>
          <td>Start Date</td>
          <td><%= @job.startdate %></td>
        </tr>
        <tr>
          <td>End Date</td>
          <td><%= @job.enddate %></td>
        </tr>
      </table>
      <div style="padding-left: 12px;padding-top: 8px;padding-right: 4px;">
        <b class="pull-left">Description:</b>
        </br>
          <%=raw @job.description %>
      </div>
      <div class="panel-body">
        <%= link_to 'Back', jobs_path, class:"btn btn-primary pull-left",type:"button" %>
        <%= link_to 'Edit', edit_job_path(@job), class:"btn btn-success pull-right",type:"button" %>
      </div>
    </div>
  </div>
  </div>
</div>



