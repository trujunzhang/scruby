<!-- Table -->
<table class="table table-striped table-bordered" cellspacing="0">
  <thead>
  <tr>
    <th>Title</th>
    <th>Customer</th>
    <th>Duration</th>
    <th>Price</th>
    <th>From</th>
    <th>Status</th>
    <th>Type</th>
    <th>Show</th>
  </tr>
  </thead>

  <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= link_to job.url do %>
              <%= job.title %>
          <% end %>
          <div class="description" style="display: none">
            <%= raw job.description %>
          </div>
        </td>
        <td><%= job.customer %></td>

        <td>
          <%= job.startdate %>
          -
          <%= job.enddate %>
        </td>
        <td><%= job.price %></td>
        <td><%= job.from %></td>
        <td><%= job.status %></td>
        <td><%= job.jobtype %></td>
        <td>
          <%= link_to 'Show', job %>
        </td>
      </tr>
  <% end %>
</table>