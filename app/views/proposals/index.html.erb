<div class='container' id="showcases" data-ctrl="jobs">

  <div class="row">
    <nav>
      <ul class="pager">
        <li class="previous"> <%= link_to 'New Proposal', new_proposal_path %></li>
        <li class="next"><h3 style="float: right;">Count: <span><%= @count %></span></h3></li>
      </ul>
    </nav>
  </div>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Listing proposals</div>
    <div class="panel-body">

      <!-- Table -->
      <table class="table table-striped table-bordered" cellspacing="0">
        <tr>
          <th>Title</th>
          <th>Content</th>
        </tr>

        <% @proposals.each do |proposal| %>
            <tr>
              <td>
                <%= link_to proposal do %>
                    <h6><%= proposal.title %></h6>
                <% end %>
              </td>
              <td>
                <div class="table-description">
                  <%= raw proposal.content %>
                </div>
              </td>
            </tr>
        <% end %>
      </table>

    </div>
  </div>

  <div class="pagination">
    <%= will_paginate @jobs, :renderer => BootstrapPagination::Rails %>
  </div>


</div>
