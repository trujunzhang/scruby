<div class='container' id="showcases" data-ctrl="jobs">

  <div class="row">
    <nav>
      <ul class="pager">
        <li class="previous"> <%= link_to 'New Category', new_cat_path %></li>
        <li class="next"><h3 style="float: right;">Count: <span><%= @count %></span></h3></li>
      </ul>
    </nav>
  </div>

  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Listing categories</div>
    <div class="panel-body">

      <!-- Table -->
      <table class="table table-striped table-bordered" cellspacing="0">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Show</th>
        </tr>

        <% @cats.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= raw category.description %></td>
              <td><%= link_to 'Show', category %></td>
            </tr>
        <% end %>
      </table>

    </div>
  </div>

  <div class="pagination">
    <%= will_paginate @cats, :renderer => BootstrapPagination::Rails %>
  </div>


</div>
