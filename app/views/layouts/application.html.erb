  <%= yield(:head) %>
</head>
<body class="full-page-base-style" style="position: relative;" >
<div class="course-page course-theme-red web_dev">
  <%= render 'layouts/navigation' %>
  <%= render 'layouts/messages' %>
  <%= yield %>
</div>

</body>
</html>
