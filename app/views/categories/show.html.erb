
<div class="row">
  <div class="container form_panel">

    <div class="row">
      <nav>
        <ul class="pager">
          <li class="previous"> <%= link_to 'Back', categories_path %></li>
          <li class="next"><%= link_to 'Edit', edit_category_path(@category)%></li>
        </ul>
      </nav>
    </div>

    <div class="panel panel-success">

      <div class="panel-heading">
        <h4><%= @category.title %></h4>
      </div>

      <div class="panel-body">
        <div style="padding-left: 12px;padding-top: 8px;padding-right: 4px;">
          <b class="pull-left">Description:</b>
          </br>
          <%=raw @category.description %>
        </div>
      </div>



    </div>
  </div>
</div>



